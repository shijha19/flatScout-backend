# Backend Environment Variables for Render
# Set these in your Render dashboard under Environment tab

# MongoDB Connection (use MongoDB Atlas for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/flatscout?retryWrites=true&w=majority

# JWT Secret (generate a secure random string)
JWT_SECRET=your-jwt-secret-key

# Frontend URL (your Netlify app URL)
FRONTEND_URL=https://your-frontend-app.netlify.app

# Server Port (Render will set this automatically)
PORT=5000

# Node Environment
NODE_ENV=production

# Push Notifications Configuration (Generate using: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=BP8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8f8
VAPID_PRIVATE_KEY=VGhpcyBpcyBhIGZha2UgcHJpdmF0ZSBrZXkgZm9yIGRldmVsb3BtZW50
VAPID_CONTACT_EMAIL=mailto:your_email@example.com

# Email Configuration
EMAIL_FROM="FlatScout" <noreply@flatscout.com>
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Stream Chat Configuration
STREAM_API_KEY=your-stream-api-key
STREAM_API_SECRET=your-stream-api-secret

# OAuth Configuration (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-backend-app.onrender.com/api/auth/google/callback
